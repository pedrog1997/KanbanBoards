<%- include ("./partials/_header") %>


<div class="container">
    <h1>Login page</h1>
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="password">
        </div>
        <br>
        <ul class="list-group list-group-horizontal">
            <button type="submit" class="list-group-item list-group-item-action list-group-item-primary">
                <h5 class="text-center">Sign in</h5>
            </button>
        </ul>
    </form>
    <br>
    <ul class="list-group list-group-horizontal">
        <a href="/google" class="list-group-item list-group-item-action list-group-item-success"><h5 class="text-center">Sign in with Google</h5></a>
    </ul>
    <br>
</div>


<%- include ("./partials/_footer") %>
